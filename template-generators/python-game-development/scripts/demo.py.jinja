    print_sprint_status()
    
    if args.status:
        return 0
    
    if args.instructions:
        print_demo_instructions()
        return 0
    
    # Initialize demo controller
    config = GameSettings()
    demo = DemoController(config)
    
    if args.record:
        output_path = Path(args.record)
