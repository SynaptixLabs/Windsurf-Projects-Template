# Pre-commit hooks configuration for {{project_name}}
# Lightweight version for initial setup - expand later as needed
# See https://pre-commit.com for more information

repos:
  # Essential built-in hooks (fast, no dependencies)
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.5.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: check-json
      - id: check-toml
      - id: check-added-large-files
      - id: check-merge-conflict
      - id: debug-statements

  # Ruff for basic linting (fast, minimal setup)
  - repo: https://github.com/astral-sh/ruff-pre-commit
    rev: v0.1.11
    hooks:
      - id: ruff
        args: [--fix, --exit-non-zero-on-fix]

# Global configuration - keep it simple for initial setup
default_stages: [commit]
fail_fast: true

