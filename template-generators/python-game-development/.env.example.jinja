# Environment configuration for {{project_name}}
# Copy this file to .env and customize values for your environment

# === Game Configuration ===
GAME_TITLE="{{project_description}}"
WINDOW_WIDTH=800
WINDOW_HEIGHT=600
FPS=60
FULLSCREEN=false

# === Board Configuration ===
BOARD_WIDTH=7
BOARD_HEIGHT=6
CONNECT_LENGTH=4

# === Visual Configuration ===
# RGB color values (R,G,B)
BOARD_COLOR_R=64
BOARD_COLOR_G=128
BOARD_COLOR_B=255

PLAYER1_COLOR_R=255
PLAYER1_COLOR_G=64
PLAYER1_COLOR_B=64

PLAYER2_COLOR_R=255
PLAYER2_COLOR_G=255
PLAYER2_COLOR_B=64

BACKGROUND_COLOR_R=32
BACKGROUND_COLOR_G=32
BACKGROUND_COLOR_B=32

# === Audio Configuration ===
ENABLE_SOUND=true
ENABLE_MUSIC=true
SOUND_VOLUME=0.7
MUSIC_VOLUME=0.5

# === AI Configuration ===
AI_ENABLED=true
AI_DIFFICULTY=medium
AI_THINK_TIME=1.0

# === Development Configuration ===
DEBUG_MODE=false
SHOW_FPS=false
LOG_LEVEL=INFO

