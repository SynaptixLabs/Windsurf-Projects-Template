# {{ project_name }} Environment Configuration
# Copy this file to .env and update with your actual values

# Basic application settings
APP_NAME={{ project_name }}
VERSION=0.1.0
DEBUG=false

{% if project_type == "web-api" or project_type == "agentic-ai" -%}
# API settings
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_HOSTS=*

{% if "postgresql" in databases -%}
# PostgreSQL settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB={{ project_slug.replace('-', '_') }}
{% endif -%}

{% if "mongodb" in databases -%}
# MongoDB settings
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB={{ project_slug.replace('-', '_') }}
{% endif -%}

{% if "redis" in databases -%}
# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
{% endif -%}

{% if "chromadb" in databases -%}
# ChromaDB settings
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION={{ project_slug.replace('-', '_') }}_embeddings
{% endif -%}

{% if "pinecone" in databases -%}
# Pinecone settings
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX={{ project_slug.replace('-', '_') }}
{% endif -%}

{% endif -%}

{% if project_type == "agentic-ai" -%}
# AI/LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CrewAI settings
CREW_VERBOSE=true
CREW_MEMORY=true
{% endif -%}

{% if project_type == "data-science" -%}
# Data Science settings
DATA_DIR=data
OUTPUT_DIR=output
BATCH_SIZE=1000
MAX_WORKERS=4

{% if orchestration_tool == "prefect" -%}
# Prefect settings
PREFECT_API_URL=http://localhost:4200/api
{% elif orchestration_tool == "airflow" -%}
# Airflow settings
AIRFLOW_HOME=./airflow
{% endif -%}
{% endif -%}

{% if project_type == "game-development" -%}
# Game settings
SCREEN_WIDTH=800
SCREEN_HEIGHT=600
FPS=60
FULLSCREEN=false

# Game directories
ASSETS_DIR=assets
SAVES_DIR=saves
{% endif -%}

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development settings
HOT_RELOAD=false
PROFILING=false

# Security (for production)
SECRET_KEY=your_secret_key_here_change_in_production

{% if include_github_actions -%}
# CI/CD settings (GitHub Actions will override these)
CI=false
GITHUB_ACTIONS=false
{% endif -%}

{% if testing_framework == "enterprise" -%}
# Testing settings
HYPOTHESIS_PROFILE=dev
{% endif -%}
