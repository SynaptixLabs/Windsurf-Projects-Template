"""Pydantic models for Instructor examples"""
from pydantic import BaseModel, Field
from typing import List, Optional

class User(BaseModel):
    name: str = Field(description="User's full name")
    age: int = Field(description="User's age", gt=0)
    email: Optional[str] = Field(None, description="User's email address")

class Product(BaseModel):
    name: str = Field(description="Product name")
    price: float = Field(description="Product price", gt=0)
    quantity: int = Field(description="Number of items in stock", ge=0)

class Order(BaseModel):
    user: User
    products: List[Product]
    total_cost: float = Field(description="Total cost of the order")
