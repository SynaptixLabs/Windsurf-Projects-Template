"""Data transformer for complex transformations"""

import polars as pl
from typing import Dict, Any

from ..base import DataProcessor

class DataTransformer(DataProcessor):
    """Applies complex business logic transformations."""

    def process(self, df: pl.DataFrame, **kwargs) -> pl.DataFrame:
        """Example transformation: apply a custom function."""
        return df.with_columns([
            pl.col("feature").map_elements(lambda x: x * 2, return_dtype=pl.Float64).alias("doubled_feature")
        ])
