"""Base classes for data processing components"""

from abc import ABC, abstractmethod
import polars as pl
from typing import Any, Dict

class DataProcessor(ABC):
    """Abstract base class for all data processors."""

    @abstractmethod
    def process(self, data: Any, **kwargs) -> pl.DataFrame:
        """Process input data and return a Polars DataFrame."""
        pass

    def __call__(self, data: Any, **kwargs) -> pl.DataFrame:
        return self.process(data, **kwargs)
