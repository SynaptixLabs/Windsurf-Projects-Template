"""Data exporter for saving DataFrames"""

import polars as pl
from pathlib import Path
from typing import Union

class DataExporter:
    """Exports a Polars DataFrame to a specified format."""

    def export(self, df: pl.DataFrame, path: Union[str, Path], format: str = "parquet", **kwargs):
        """Exports the DataFrame to the given path and format."""
        if format == "parquet":
            df.write_parquet(path, **kwargs)
        elif format == "csv":
            df.write_csv(path, **kwargs)
        elif format == "json":
            df.write_json(path, **kwargs)
        else:
            raise ValueError(f"Unsupported format: {format}")
