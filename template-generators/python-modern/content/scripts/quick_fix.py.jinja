#!/usr/bin/env python3
"""
Quick Ruff Fix Script
One-command code quality fix for the entire project.
"""

import subprocess
import sys
from pathlib import Path

def main():
    """Run Ruff fixes on the entire project"""
    print("ğŸ”§ Running Ruff auto-fixes...")
    
    # Run linter with fixes
    print("1. Fixing linting issues...")
    lint_result = subprocess.run([
        "ruff", "check", ".", "--fix", "--unsafe-fixes"
    ], capture_output=True, text=True)
    
    if lint_result.returncode == 0:
        print("âœ… Linting fixes applied")
    else:
        print("âš ï¸ Some linting issues remain:")
        print(lint_result.stdout)
    
    # Run formatter
    print("2. Formatting code...")
    format_result = subprocess.run([
        "ruff", "format", "."
    ], capture_output=True, text=True)
    
    if format_result.returncode == 0:
        print("âœ… Code formatted")
    else:
        print("âŒ Formatting failed:")
        print(format_result.stderr)
        return False
    
    print("ğŸ‰ Code quality fixes complete!")
    return True

if __name__ == "__main__":
    success = main()
    sys.exit(0 if success else 1)
