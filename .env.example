# ============================================================
# {{PROJECT_NAME}} — Environment Variables Master Reference
# ============================================================
#
# HOW TO USE:
#   Development:  copy to .env.development  (or .env for local dev)
#   Staging:      copy to .env.staging
#   Production:   copy to .env.production   (secrets via vault/CI — no values here)
#
# NEVER commit .env* files with real values to git.
# .env.example is the ONLY env file that goes in source control.
#
# Env precedence (highest → lowest):
#   .env.local > .env.{environment} > .env > defaults
#
# ============================================================

# ========================
# App Identity
# ========================
APP_NAME={{PROJECT_NAME}}
APP_VERSION=0.1.0

# Environment tier: development | staging | production
APP_ENV=development

# Set to false in staging/production
DEBUG=true

# debug | info | warning | error | critical
LOG_LEVEL=info

# ========================
# Security
# ========================
# Min 32 chars — use: openssl rand -hex 32
SECRET_KEY=change-me-generate-with-openssl-rand-hex-32

# Comma-separated allowed origins (CORS)
# Dev:  http://localhost:3000,http://localhost:{{DEV_PORT}}
# Prod: https://{{YOUR_DOMAIN}}
ALLOWED_ORIGINS=http://localhost:3000

# ========================
# Database
# ========================
# PostgreSQL (default)
DATABASE_URL=postgresql://user:password@localhost:5432/{{db_name}}_dev

# SQLite (local dev alternative)
# DATABASE_URL=sqlite:///./{{db_name}}.db

# Connection pool (tune per environment)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ========================
# Cache / Redis
# ========================
# REDIS_URL=redis://localhost:6379/0
# REDIS_TTL_SECONDS=3600

# ========================
# Frontend / Server
# ========================
# Port your dev server listens on
PORT={{DEV_PORT}}
HOST=localhost

# Public base URL (used for absolute links, emails, etc.)
# Dev:  http://localhost:{{DEV_PORT}}
# Prod: https://{{YOUR_DOMAIN}}
PUBLIC_URL=http://localhost:{{DEV_PORT}}

# ========================
# AI / LLM Services
# ========================
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...

# Model defaults (override per env)
# LLM_MODEL=claude-sonnet-4-6
# LLM_MAX_TOKENS=4096

# ========================
# Storage
# ========================
# Local (dev)
# STORAGE_BACKEND=local
# STORAGE_LOCAL_PATH=./data/uploads

# S3-compatible (staging/prod)
# STORAGE_BACKEND=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET={{PROJECT_NAME}}-{{environment}}
# AWS_REGION=us-east-1

# ========================
# Email / SMTP
# ========================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# EMAIL_FROM=noreply@{{YOUR_DOMAIN}}

# ========================
# Observability
# ========================
# SENTRY_DSN=https://...@sentry.io/...
# SENTRY_ENVIRONMENT=development

# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ========================
# Feature Flags
# ========================
# FEATURE_FLAG_X=false
# FEATURE_FLAG_Y=false
